<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/button-first-page"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_first_page"/>

    <ImageView
        android:id="@+id/button-previous-page"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_chevron_left"/>

    <EditText
        android:id="@+id/input-page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:hint="Page"
        android:textColor="@android:color/black"
        android:textIsSelectable="false" />

    <ImageView
        android:id="@+id/button-next-page"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_chevron_right"/>

    <ImageView
        android:id="@+id/button-last-page"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_last_page"/>

</LinearLayout>